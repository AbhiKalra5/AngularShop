  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:4600",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Edge",
      "port": 4600,
      "request": "attach",
      "type": "pwa-msedge",
      "webRoot": "${workspaceFolder}",
    },
    {
      "type": "pwa-msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:4600",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "C:/Program Files (x86)/Microsoft/Edge/Application/msedge.exe"
    }
  ]
}
